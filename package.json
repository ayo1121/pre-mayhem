{
  "name": "pre-mayhem",
  "version": "1.0.0",
  "description": "Production-ready Solana rewards bot for pump.fun tokens with hourly buys and weighted lottery rewards",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "bootstrap": "ts-node src/index.ts --bootstrap",
    "once:buy": "ts-node src/index.ts --once-buy",
    "once:reward": "ts-node src/index.ts --once-reward",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop pre-mayhem",
    "pm2:restart": "pm2 restart pre-mayhem",
    "pm2:logs": "pm2 logs pre-mayhem",
    "pm2:status": "pm2 status"
  },
  "keywords": [
    "solana",
    "pump.fun",
    "rewards",
    "bot"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@solana/spl-token": "^0.4.14",
    "@solana/web3.js": "^1.98.4",
    "better-sqlite3": "^12.5.0",
    "cross-fetch": "^4.1.0",
    "dotenv": "^17.2.3",
    "node-cron": "^4.2.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.2",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^10.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}